extends /layout

block navbar
  nav.navbar.navbar-inverse.navbar-fixed-top
    .container
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#') Node.JS Chat Application
  
block jumbotron
  h1 Hello there!
  p
    | Please login or register to join our awesome chat!
  .container
    .row
      .col-md-6
        .col-sm-offset-2.col-sm-10
          h3 Sign in
        form.form-horizontal(action='/auth/login', method='post')
          .form-group
            label.col-sm-2.control-label(for='sign-in-email') Email
            .col-sm-10
              input#sign-in-email.form-control(type='email', name='email', placeholder='Email')
          .form-group
            label.col-sm-2.control-label(for='sign-in-password') Password
            .col-sm-10
              input#sign-in-password.form-control(type='password', name='password', placeholder='Password')
          .form-group
            .col-sm-offset-2.col-sm-10
              button.btn.btn-default(type='submit') Sign in
      .col-md-6
        .col-sm-offset-2.col-sm-10
          h3 Sign up
        form.form-horizontal(action='/auth/register', method='post')
          .form-group
            label.col-sm-2.control-label(for='sign-up-email') Email
            .col-sm-10
              input#sign-up-email.form-control(type='email', name='email', placeholder='Email')
          .form-group
            label.col-sm-2.control-label(for='sign-up-password') Password
            .col-sm-10
              input#sign-up-email.form-control(type='password', name='password', placeholder='Password')
          .form-group
            label.col-sm-2.control-label(for='sign-up-displayname') Name
            .col-sm-10
              input#sign-up-email.form-control(type='text', name='displayName', placeholder='Name')
          .form-group
            .col-sm-offset-2.col-sm-10
              button.btn.btn-default(type='submit') Register
