extends /layout

block append variables
    - var defaultPageTitle = 'Set new password';

block content
    .row
        .col-md-8.col-md-offset-2
            include /partials/flash

            .panel.panel-default
                .panel-heading
                    h3.panel-title #{ title || defaultPageTitle }

                .panel-body                   

                    form.form-horizontal(action="/auth/set-password", method="post")
                        .form-group
                            label.col-md-3.control-label(for="email") Email
                            span.col-md-8
                                input#email.form-control(type="text", name="email", value=email, disabled)
                                input.form-control(type="hidden", name="email", value=email)
                        .form-group
                            label.col-md-3.control-label(for="password") Password
                            span.col-md-8
                                input#password.form-control(type="password", name="password", required, autofocus)

                        .form-group
                            label.col-md-3.control-label(for="confirmPassword") Confirm password
                            span.col-md-8
                                input#confirmPassword.form-control(type="password", name="confirmPassword", required)

                        .form-group
                            span.col-md-offset-3.col-md-8
                                button.btn.btn-primary.btn-block(type="submit") Send

    .row
        .col-md-6.col-md-offset-3
            .row
                .col-md-6.text-right
                    a(href="/auth/registration") Registration
                .col-md-5.col-md-offset-1.text-left
                    a(href="/auth/login") Login