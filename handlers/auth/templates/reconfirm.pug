extends /layout

block append variables
    - var defaultPageTitle = 'Re-send confirm registration letter';

block content
    .row
        .col-md-6.col-md-offset-3
            include /partials/flash

            .panel.panel-default
                .panel-heading
                    h3.panel-title #{ title || defaultPageTitle }

                .panel-body                   

                    form.form-horizontal(action="/auth/reconfirm", method="post")
                        .form-group
                            label.col-md-3.control-label(for="email") Email
                            span.col-md-8
                                input#email.form-control(type="email", name="email", required, autofocus)

                        .form-group
                            span.col-md-offset-3.col-md-8
                                button.btn.btn-primary.btn-block(type="submit") Send

    .row
        .col-md-6.col-md-offset-3
            .row
                .col-md-6.text-right
                    a(href="/auth/registration") Registration
                .col-md-5.col-md-offset-1.text-left
                    a(href="/auth/login") Login